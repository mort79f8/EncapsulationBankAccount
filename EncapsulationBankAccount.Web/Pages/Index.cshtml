@page
@model EncapsulationBankAccount.Web.Pages.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table>
        <tr>
            <th>Id</th>
            <th>Balance</th>
            <th>Oprettet</th>
        </tr>
        @{
            foreach (var account in Model.accounts)
            {
                <tr>
                    <td>@account.Id</td>
                    <td>@account.Balance</td>
                    <td>@account.Created.ToShortDateString()</td>
                </tr>
            }
        }
    </table>
    <p>Total Balance: @Model.CalcTotalBalance(Model.accounts)</p>
</body>
</html>
